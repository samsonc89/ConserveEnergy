---
import ScheduleButton from "./ScheduleButton.astro";
import bulb from "../images/LED-bulb.png";
const { text, title, caption, imagePath, altText } = Astro.props;
import { Image } from "astro:assets";
const images = import.meta.glob("../images/*");
---

<section class="flex justify-center items-center gap-12">
  <div class="flex-1">
    <div class="flex flex-col gap-6 mb-10">
      <h4 class="caption">{caption}</h4>
      <h1>{title}</h1>
      <p class="body mr-4">{text}</p>
    </div>
    <ScheduleButton />
  </div>
  <div class="flex-1 aspect-square">
    <div class="hero-image w-full h-full rounded-3xl overflow-hidden">
      <!-- <img src={imagePath} alt={altText} /> -->
      <Image src={images[imagePath]()} alt={altText} />
    </div>
  </div>
</section>

<style>
  img {
    height: 100%;
    width: auto;
    object-fit: cover;
  }
</style>
