---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

const { imagePath, altText, name, text, index } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/images/*.{jpeg,jpg,png,gif}"
);
if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "/src/images/*.{jpeg,jpg,png,gif}"`
  );
---

<div
  id=`carousel-item-${index}`
  class="card hidden w-full flex flex-col items-center gap-8 duration-700 ease-in-out"
>
  <Image src={images[imagePath]()} alt={altText} width="100" height="100" />
  <h5>{name}</h5>
  <p class="body text-center">"{text}"</p>
</div>
